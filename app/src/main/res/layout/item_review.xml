<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin_movie_list"
    android:background="@drawable/reviews_item_background"
    android:padding="@dimen/default_margin_review_list">

    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/default_title_text_size"
        tools:text="Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_title"/>

    <TextView
        android:padding="@dimen/default_margin"
        android:textSize="@dimen/default_title_text_size"
        android:layout_marginTop="@dimen/default_margin"
        tools:text="Comment"
        android:background="@color/colorLightGrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_content"/>

</LinearLayout>